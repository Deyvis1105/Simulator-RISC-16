{
    "tasks": [
        {
            "label": "CMake: configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}\\build",
                "-G", "MinGW Makefiles"
            ],
            "problemMatcher": []
        },
        {
            "label": "CMake: build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}\\build",
                "--config", "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": "CMake: configure",
            "problemMatcher": []
        },
        {
            "label": "GCC: build all",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-Wextra",
                "-g3",
                "${workspaceFolder}\\src\\*.cpp",
                "${workspaceFolder}\\include\\Implements\\*.cpp",
                "-I${workspaceFolder}\\include",
                "-o",
                "${workspaceFolder}\\src\\main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "C/C++: g++.exe build active file",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-Wextra",
                "-g3",
                "${file}",
                "${workspaceFolder}\\include\\Implements\\*.cpp",
                "-I${workspaceFolder}\\include",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run: main",
            "type": "shell",
            "command": "${workspaceFolder}\\src\\output\\main.exe",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "C/C++ Compile Run: Compile",
            "type": "shell",
            "command": "C:\\msys64\\mingw64\\bin\\g++.EXE",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-Wextra",
                "-g3",
                "${file}",
                "${workspaceFolder}\\include\\Implements\\*.cpp",
                "-I${workspaceFolder}\\include",
                "-o",
                "${fileDirname}\\output\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "version": "2.0.0"
}